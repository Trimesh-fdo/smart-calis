# Backend Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# For MongoDB Atlas (Cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smart_calis?retryWrites=true&w=majority
# For Local MongoDB:
MONGODB_URI=mongodb://localhost:27017/smart_calis

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_use_32_chars_min
JWT_EXPIRE=7d

# ML Service Configuration
ML_SERVICE_URL=http://localhost:5001
ML_SERVICE_TIMEOUT=10000

# External APIs
OPENAI_API_KEY=your_openai_api_key_sk_...

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Email Configuration (Optional - for future email notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email
SMTP_PASS=your_password
SMTP_FROM=noreply@smartcalis.com
